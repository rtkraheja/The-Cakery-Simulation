@model Cake_Shop.Models.Cart

@{
    ViewData["Title"] = "Quantity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-4">
        <h2 style="color : goldenrod"> The Cakery</h2>

    </div>

    <div class="col-4">
        <h2 class="text-info">Sign In</h2>

    </div>
    <div class="col-md-4">
        <form method="post" asp-action="Add">
            <div class="form-group row">
                <p class="badge-info">Please update the quantity </p>
            </div>


            <div class="form-group row">
                <label asp-for="ItemId" class="col-form-label col-3"></label>
                <input type="text" asp-for="ItemId" class="form-control col-4" readonly />
            </div>



            <div class="form-group row">
                <label asp-for="@Model.Quantity" class="col-form-label col-3"></label>
                <input type="text" asp-for="@Model.Quantity" class="form-control col-4" />
            </div>


            <div class="form-group row">
                <input type="submit" class="btn btn-info col-4 offset-3" value="Proceed">
                &nbsp;&nbsp;
                <a asp-action="Index" class="btn btn-success"> Back To List</a>
            </div>

        </form>
    </div>
</div>
